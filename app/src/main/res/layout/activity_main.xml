<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="150dp" >

        <TextView
            android:id="@+id/teamAScore"
            android:layout_width="150dp"
            android:layout_height="53dp"
            android:layout_marginRight="5dp"
            android:text="Team1: 0"
            android:textSize="20dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/teamBScore"
            android:layout_width="150dp"
            android:layout_height="53dp"
            android:layout_marginLeft="5dp"
            android:text="TeamB: 0"
            android:textSize="18dp"
            android:textColor="#000000"/>
    </LinearLayout>

    <EditText
        android:id="@+id/enterTeamAScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Team A's Score"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/enterTeamBScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Team B's Score"
        android:layout_margin="5dp"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        />

    <Button
        android:id="@+id/addScoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Score"
        android:layout_marginTop="200dp"
         android:layout_gravity="bottom"/>
</LinearLayout>